{
  "name": "easy-api-test",
  "version": "2.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/purplnay/easy-api-test.git",
  "author": "Nay <nay@purpltag.com>",
  "license": "MIT",
  "homepage": "https://purplnay.github.io/easy-api-test/",
  "description": "API testing, but it's easy. No extra configuration, no CLI, no extra dependencies.",
  "keywords": [
    "api",
    "json",
    "test",
    "testing",
    "e2e",
    "end-to-end",
    "easy"
  ],
  "scripts": {
    "build": "tsc --rootDir src --outDir dist -d --stripInternal",
    "docs": "typedoc --mode file --stripInternal --out docs src",
    "test": "ts-mocha --file test/index.ts test/*.test.ts && npm run build && node example/test/index.js",
    "prepublish": "npm run build"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.10",
    "expect": "^26.6.2",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "mocha": "^8.2.1",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0",
    "ts-mocha": "^8.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/supertest": "^2.0.10",
    "colors": "^1.4.0",
    "supertest": "^6.0.1"
  }
}
